    <script>
        var nav = document.querySelector('nav');
        var currentPage = window.location.pathname.toLowerCase();

        function adjustNavbar() {
            if ((currentPage === '/' || currentPage === '/home') || (currentPage === '/nosotros' || currentPage === '/about')) {
                if (window.pageYOffset > 100) {
                    nav.classList.add('bg-light', 'navbar-light', 'shadow');
                    nav.classList.remove('navbar-dark');
                } else {
                    nav.classList.remove('bg-light', 'navbar-light', 'shadow');
                    nav.classList.add('navbar-dark');
                }
            } else {
                nav.classList.add('bg-light', 'navbar-light', 'shadow');
                nav.classList.remove('navbar-dark');
            }
        }

        window.addEventListener('scroll', adjustNavbar);
        window.addEventListener('load', adjustNavbar);
    </script>


    <script>

        let mybutton = document.getElementById("scrollToTopBtn");
        let chatButton = document.getElementById("chatbotBtn");


        window.onscroll = function () {
            scrollFunction();
        };

        function scrollFunction() {
            if (document.body.scrollTop > 40 || document.documentElement.scrollTop > 40) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }


        function topFunction() {
            let scrollToTop = window.setInterval(function () {
                let pos = window.pageYOffset;
                if (pos > 0) {
                    window.scrollTo(0, pos - 40);
                } else {
                    window.clearInterval(scrollToTop);
                }
            }, 16);
        }


        chatButton.addEventListener('click', function () {
            alert('Chatbot button clicked!');
        });
